{
  "name": "cuecast",
  "version": "1.0.0",
  "description": "Desktop Electron soundboard for streamers",
  "main": "dist/main.js",
  "scripts": {
    "build-ts": "tsc && cp src/index.html src/styles.css dist/",
    "start": "npm run build-ts && electron .",
    "dev": "npm run build-ts && electron . --dev",
    "build": "npm run build-ts && electron-builder",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "soundboard",
    "streaming",
    "audio"
  ],
  "author": "CueCast Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.cuecast.app",
    "productName": "CueCast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "src/styles.css",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    }
  }
}
